<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="780.0" prefWidth="700.0" spacing="15.0"
      style="
          -fx-padding: 20;
          -fx-background-image: url('file:/C:/Users/omars/IdeaProjects/Gps_dijkstra/src/main/resources/images/interfaz_GPS.png');
          -fx-background-size: cover;
          -fx-background-repeat: no-repeat;
          -fx-background-position: center center;
          -fx-background-color: rgba(255, 255, 255, 0.85);
          -fx-background-insets: 0;
          -fx-border-radius: 10;
          -fx-background-radius: 10;
      "
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.gps.Controller.ViewController">

    <Label alignment="CENTER" maxWidth="Infinity"
           style="
               -fx-font-size: 22px;
               -fx-font-weight: bold;
               -fx-text-fill: #2c3e50;
               -fx-background-color: rgba(255, 255, 255, 0.7);
               -fx-padding: 10;
               -fx-background-radius: 5;
           "
           text="Sistema de Gestión de Grafos GPS" VBox.vgrow="NEVER">
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <GridPane hgap="10" vgap="5" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-padding: 10; -fx-background-radius: 5;">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="180.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <children>
            <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Cargar Archivos:" GridPane.columnSpan="4"/>
            <Button onAction="#onLoadFile" text="Cargar Nodos (CSV)" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="LEFT" maxWidth="Infinity"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Label fx:id="nodeFileLabel" text="No seleccionado" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Button onAction="#onLoadAdy" text="Cargar Adyacencias (CSV)" GridPane.columnIndex="2" GridPane.rowIndex="1" GridPane.halignment="LEFT" maxWidth="Infinity"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Label fx:id="adjFileLabel" text="No seleccionado" GridPane.columnIndex="3" GridPane.rowIndex="1" />
        </children>
    </GridPane>

    <Separator />

    <HBox spacing="20.0" VBox.vgrow="ALWAYS">
        <children>
            <VBox fx:id="leftPane" alignment="TOP_CENTER" spacing="10.0" HBox.hgrow="ALWAYS"
                  style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 10; -fx-background-radius: 5;">
                <children>
                    <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Resultados y Notificaciones:" />
                    <TextArea fx:id="resultArea" editable="false" prefHeight="300.0" prefWidth="300.0" wrapText="true"
                              style="-fx-background-color: transparent; -fx-border-color: #3498db;"
                              VBox.vgrow="ALWAYS">
                        <font>
                            <Font size="13.0" />
                        </font>
                    </TextArea>
                </children>
            </VBox>

            <VBox fx:id="rightPane" alignment="TOP_CENTER" spacing="10.0" HBox.hgrow="ALWAYS"
                  style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 10; -fx-background-radius: 5;">
                <children>
                    <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Visualización de Nodos:" />
                    <TextArea fx:id="graphArea" editable="false" prefHeight="300.0" prefWidth="300.0" wrapText="true"
                              style="-fx-background-color: transparent; -fx-border-color: #3498db;"
                              VBox.vgrow="ALWAYS"/>
                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <children>
                            <Button text="Mostrar Nodos" onAction="#onShowNodes"
                                    style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                        </children>
                    </HBox>
                </children>
            </VBox>
        </children>
    </HBox>

    <Separator />

    <VBox style="-fx-background-color: rgba(255, 255, 255, 0.8); -fx-padding: 10; -fx-background-radius: 5;" spacing="5">
        <Label style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Calcular Ruta:" />
        <HBox alignment="CENTER_LEFT" spacing="8.0" maxWidth="Infinity">
            <children>
                <Label text="Inicio:" style="-fx-text-fill: #2c3e50;"/>
                <TextField fx:id="startNodeField" prefWidth="55.0" promptText="ID" HBox.hgrow="SOMETIMES"
                           style="-fx-background-color: white;"/>
                <Label text="Fin:" style="-fx-text-fill: #2c3e50;"/>
                <TextField fx:id="endNodeField" prefWidth="55.0" promptText="ID" HBox.hgrow="SOMETIMES"
                           style="-fx-background-color: white;"/>
                <Label text="Veloc.:" style="-fx-text-fill: #2c3e50;"/>
                <TextField fx:id="baseSpeedField" prefWidth="55.0" text="20" HBox.hgrow="SOMETIMES"
                           style="-fx-background-color: white;"/>
                <Label text="Hora:" style="-fx-text-fill: #2c3e50;"/>
                <TextField fx:id="hourField" prefWidth="50.0" text="4" HBox.hgrow="SOMETIMES"
                           style="-fx-background-color: white;"/>
                <Button onAction="#onFindRuta" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold;"
                        text="Calcular" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
            </children>
        </HBox>
    </VBox>
</VBox>